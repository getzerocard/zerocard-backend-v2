    "@nestjs/typeorm": "^11.0.0",
    "@prisma/client": "^6.9.0",
    "@privy-io/server-auth": "^1.26.2",
    "@rhinestone/module-sdk": "^0.2.8",
    "@zerodev/ecdsa-validator": "^5.4.9",
    "@zerodev/sdk": "^5.4.36",
    "axios": "^1.9.0",
    "bcryptjs": "^3.0.2",
    "body-parser": "^2.2.0",
    "bullmq": "^5.53.2",
    "class-transformer": "^0.5.1",
