{
  "name": "zerocard-backend",
  "version": "0.0.1",
  "description": "",
  "author": "zerocard",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prepare": "[ \"$CI\" != \"true\" ] || true",
    "clean": "rimraf dist coverage .cache",
    "prebuild": "yarn run clean",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,tests}/**/*.+(ts|js|tsx)\"",
    "dev": "yarn run lint && yarn run start:dev",
    "debug": "yarn run lint && yarn run start:debug",
    "pretest": "rimraf coverage",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "db:generate": "npx prisma generate",
    "db:generate-watch": "npx prisma generate --watch",
    "db:migrate-dev": "npx prisma migrate dev",
    "db:migrate-dev-create": "npx prisma migrate dev --create-only",
    "db:migrate-reset": "npx prisma migrate reset",
    "db:migrate-deploy": "npx prisma migrate deploy",
    "db:migrate-status": "npx prisma migrate status",
    "db:migrate-resolve": "npx prisma migrate resolve",
    "db:seed": "npx prisma db seed",
    "prisma:studio": "npx prisma studio",
    "typecheck": "tsc --noEmit",
    "check-imports": "tsc --noEmit --strict --forceConsistentCasingInFileNames --diagnostics --listFiles --listEmittedFiles",
    "precheck": "yarn check-imports"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.826.0",
